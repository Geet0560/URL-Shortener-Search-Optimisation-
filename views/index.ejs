    crossorigin="anonymous" />

  <style>
    body {
      background-image: url('https://img.freepik.com/free-vector/grunge-watercolor-background-using-pastel-colours_1048-6530.jpg?w=740&t=st=1687196979~exp=1687197579~hmac=daa130e4401938b81aeedc22c35298706d3c5849ae959e75707fe194357df05a');
      background-repeat: no-repeat;
      background-size: cover;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 1200px;
    }

    .table-responsive {
      padding-top: 1px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      width: 100%;
    }

    .table {
      background-color: #f4f4e1;
    }

    .table tbody tr:hover {
      background-color: rgba(245, 235, 235, 0.896);
    }

    .table {
    background-color: #f4f4e1;
    table-layout: fixed; 
    width: 100%; 
    }

    .table thead th:first-child,
    .table tbody td:first-child {
     width: 550px; 
     max-width: 600px; 
     word-wrap:normal; 
  }

  .table tbody td {
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis; 
  }

  .table tbody tr:nth-child(even) {
    background-color: #f8f9fa; 
  }

  .table tbody tr:hover {
    background-color: rgba(245, 235, 235, 0.896);
  }

  .table tbody td {
    padding: 10px;
  }

  .table tbody td:nth-child(1) {
    background-color: #e8f0fe; 
  }

  .table tbody td:nth-child(2) {
    background-color: #eefae3; 
  }

  .table tbody td:nth-child(3) {
    background-color: #fde8cd;
  }

  .table tbody td:nth-child(4) {
    background-color: #f9d8e2; 
  }

    .form-inline {
      margin-bottom: 10px;
    } 

     .form-control {
      width: 350px;
      padding: 10px;
    } 

    .input-group-append {
      padding-left: 15px;
    }

    .btn:hover {
      opacity: 0.8;
    }

    .navbar {
      background-color: #f4f4e1;
    }

    footer {
      margin-top: auto;
      background-color: #f4f4e1;
      padding: 10px 0px 0px 0px;
      text-align: center;
      font-size: 14px;
      color: #666;
    }

    .text-center span {
    display: inline-block;
    transition: transform 0.3s;
  }

  .text-center :hover span:nth-child(1) {
    transform: translateY(-5px);
    color: rgb(47, 140, 206);
  }

  .text-center :hover span:nth-child(2) {
    transform: translateY(-10px);
    color: rgb(9, 35, 112);
  }

  .favorite-table {
      margin-top: 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      width: 100%;
    }

    .favorite-table .table {
      background-color: #f4f4e1;
      table-layout: fixed;
      width: 100%;
    }

    .favorite-table .table thead th:first-child,
    .favorite-table .table tbody td:first-child {
      width: 550px;
      max-width: 600px;
      word-wrap: normal;
    }

    .favorite-table .table tbody td {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .favorite-table .table tbody tr:nth-child(even) {
      background-color: #f8f9fa;
    }

    .favorite-table .table tbody tr:hover {
      background-color: rgba(245, 235, 235, 0.896);
    }

    .favorite-table .table tbody td {
      padding: 10px;
    }

    .favorite-table .table tbody td:nth-child(1) {
      background-color: #e8f0fe;
    }

    .favorite-table .table tbody td:nth-child(2) {
      background-color: #eefae3;
    }

    .favorite-table .table tbody td:nth-child(3) {
      background-color: #fde8cd;
    }

    .favorite-table .table tbody td:nth-child(4) {
      background-color: #f9d8e2;
    }

    .favorite-table .table tbody td:nth-child(5) {
      background-color: #ffe1a8;
    }


    .favorite-btn {
      margin-left: 10px;
    }

    .favorite-btn i {
      color: #ffc107;
    }

    .wishlist-table {
      display: none;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(47, 140, 206); height: 55px;">
    <div class="container">
      <h5 class="" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;color: whitesmoke; font-size: 25px;">
        <img src="https://e7.pngegg.com/pngimages/789/777/png-clipart-computer-icons-tinyurl-hyperlink-symbol-url-shortening-chain-miscellaneous-text-thumbnail.png"
          alt="Logo" style="height: 30px; margin-right: 10px;">Urlsolution @IITR
      </h5>
      <a class="navbar-brand" href="/" style="text-align: center;"> <URL </a>
    </div>
  </nav>
  

  <div class="container">
    <h1 class="text-center mb-5" style="color: rgb(9, 35, 112); font-size: 36px; font-family: 'Arial', sans-serif; font-weight: bold; cursor: pointer; transition: transform 0.3s;">
      <span style="display: inline-block; transform-origin: center;">URL</span>
      <span style="display: inline-block; transform-origin: center;">Shrinker</span>
    
    </h1>

    <form action="/" method="GET" class="form-inline justify-content-center">
      <div class="input-group">
        <input required placeholder="Search" type="text" name="q" id="searchQuery"
          class="form-control rounded-pill">
        <div class="input-group-append">
          <button class="btn btn-primary rounded-pill" type="submit" style="width: 90px;">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </div>
      <a href="/" class="btn btn-secondary ml-2 rounded-pill">Back</a>
    </form>

<form action="/shortUrls" method="POST" class="form-inline justify-content-center">
    <div class="input-group mt-3">
      <input required placeholder="Enter URL" type="url" name="fullUrl" id="fullUrl"
        class="form-control rounded-pill">
      <input placeholder="Add notes (optional)" type="text" name="notes" id="notes"
        class="form-control rounded-pill ml-2">
      <div class="input-group-append">
        <button class="btn btn-success rounded-pill" type="submit">
          <i class="fas fa-compress"></i> Shrink
        </button>
      </div>
    </div>
  </form>


  <form id="filterForm" class="form-inline justify-content-center" style="padding-top: 15px;">
    <div class="form-group">
      <label for="filterSelect">Filter:</label>
      <select class="form-control ml-2" id="filterSelect" name="filter" style="font-size: 16px;">
        <option value="default">Default</option>
        <option value="alphabetical">Alphabetical (Notes)</option>
        <option value="time">Time</option>
        <option value="length">Length of Notes</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary ml-2" id="submitBtn">Apply Filter</button>
</form>
  </form>

  

  <button id="favoriteBtn" class="btn btn-primary">Favorites List</button>
<div id="favoriteTable" style="display: none;">
  <h2 style="padding-top: 10px; padding-bottom: 15px;">Favorite URLs</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% favoriteUrls.forEach(favoriteUrl => { %>
      <tr>
        <td><a href="<%= favoriteUrl.full %>"><%= favoriteUrl.full %></a></td>
        <td><a href="<%= favoriteUrl.short %>"><%= favoriteUrl.short %></a></td>
        <td><%= favoriteUrl.clicks %></td>
        <td><%= favoriteUrl.notes %></td>
        <td>
          <form action="/shortUrls/<%= favoriteUrl._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm rounded-pill">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
  
<h2 style="padding-top: 10px; padding-bottom: 5px;">History</h2>

  <div class="table-responsive mt-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Shortened URL</th>
          <th>Clicks</th>
          <th>Notes</th>
          <th>Actions</th>
          <th>Wishlist</th> 
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
            <td><%= shortUrl.notes %></td>
            <td>
              <form action="/shortUrls/<%= shortUrl._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm rounded-pill">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </form>
            </td>
            <td> 
              <% if (shortUrl.favorite) { %>
              <form action="/shortUrls/<%= shortUrl._id %>/favorite?_method=PUT" method="POST">
                <button type="submit" class="btn btn-warning btn-sm rounded-pill">
                  <i class="fas fa-star"></i> Unfavorite
                </button>
              </form>
              <% } else { %>
              <form action="/shortUrls/<%= shortUrl._id %>/favorite?_method=PUT" method="POST">
                <button type="submit" class="btn btn-light btn-sm rounded-pill">
                  <i class="far fa-star"></i> Favorite
                </button>
              </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>  

  </div>

  <footer style="background-color: rgb(47, 140, 206);">
    <div class="container">
      <p style="color: white;">&copy; 2023 URL Shrinker -> for ACM,IITR </p>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-WskhaSGFwPpibkS6b6P7B5Twjk5TzTKn6j/hXk8v0szxqHUTS8t3/mI5DIkSfrrx"
    crossorigin="anonymous"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
    integrity="sha512-F4L+bAnLDD86cyhtEHCJc2x7yV4dLpPlg+VeJQ1N0BrFsV2S5qwwuPAd4xR9g7eyi+cw5nTn2OAdxWpLXKj7ig=="
    crossorigin="anonymous"></script>

  <script>
    $(function () {
      $("#searchQuery").focus();
    });
    const favoriteBtn = document.getElementById('favoriteBtn');
  const favoriteTable = document.getElementById('favoriteTable');

  favoriteBtn.addEventListener('click', () => {
    if (favoriteTable.style.display === 'none') {
      favoriteTable.style.display = 'block';
    } else {
      favoriteTable.style.display = 'none';
    }
  });
  </script>


<script>
  document.getElementById('filterForm').addEventListener('submit', function(event) {
  event.preventDefault(); // Prevent form submission

  const filter = document.getElementById('filterSelect').value;
  const url = window.location.href.split('?')[0]; // Remove existing query parameters

  window.location.href = `${url}?filter=${filter}`; // Redirect to the filtered URL
});

  $(document).ready(function() {
  loadItems();

  $('#filterForm').submit(function(e) {
    e.preventDefault(); // Prevent form submission

    var selectedFilter = $('#filterSelect').val();
    filterItems(selectedFilter);
  });
});

function loadItems() {
  $.get('/items', function(data) {
    displayItems(data);
  });
}

function filterItems(filter) {
  $.get('/items?filter=' + filter, function(data) {
    displayItems(data);
  });
}

function displayItems(items) {
  var list = $('#list');
  list.empty();

  for (var i = 0; i < items.length; i++) {
    var item = items[i];
    var listItem = $('<li>');
    listItem.text(item.name);
    list.append(listItem);
  }
}
</script>


</body>

</html>